<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="Add" />

    <EditText
        android:id="@+id/editClaim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/claimText"
        android:layout_alignBottom="@+id/claimText"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/claimText"
        android:ems="10"
        android:inputType="text" />

    <EditText
        android:id="@+id/editDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/dateText"
        android:layout_alignBottom="@+id/dateText"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/dateText"
        android:ems="10"
        android:inputType="date"
        android:text="mm-dd-yyyy" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/EndDate"
        android:layout_alignBottom="@+id/EndDate"
        android:layout_toRightOf="@+id/EndDate"
        android:ems="10"
        android:inputType="date"
        android:text="mm-dd-yyyy" />

    <TextView
        android:id="@+id/EndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editDate"
        android:layout_marginTop="46dp"
        android:text="End Date:"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/claimText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="96dp"
        android:text="Claim:"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editClaim"
        android:layout_marginTop="45dp"
        android:text="Start Date:"
        android:textSize="25sp" />

</RelativeLayout>